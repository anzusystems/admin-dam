#!/bin/bash
# Script used to run build in the application docker container

PROJECT_ROOT="$(cd "$(dirname "${BASH_SOURCE[0]}")"/.. && pwd)"
cd "${PROJECT_ROOT}" || exit 1
# Initialize default variables
# shellcheck disable=SC1091
. ./bin/docker-libvariables
# Initialize functions
# shellcheck disable=SC1091
. ./bin/docker-libfunctions
docker_env_vars

if [ -f /.dockerenv ]; then
    env-config
    echo "[INFO] Starting yarn install and build"
    yarn install
    yarn build
    exit
fi

bin/docker-compose exec --user node "${DOCKER_COMPOSE_SERVICE_NAME}" bash -c \'bin/build\'
